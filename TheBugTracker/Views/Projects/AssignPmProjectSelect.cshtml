@model TheBugTracker.Models.Project;
@using TheBugTracker.Models.Enums;
@{
  Layout = "_Layout";
  ViewData["Title"] = "Project Select";
}

<hr />
<div class="row d-flex justify-content-center">

  <div class="col-md-6">
    <h1>Select Project</h1>
    <form asp-action="AssignPmProjectSelect" asp-controller="Projects" name="id">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <select asp-for="Id" class="form-control" asp-items="ViewBag.Id">
          <option></option>
        </select>
      </div>
      <div class="form-group">
        <input type="submit" value="Select Project" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>